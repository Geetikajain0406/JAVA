abstract class shape{
String color;
shape(String c){
    this.color=c;
}
//abstract method
abstract int area();
void dis(){
    System.out.println("the color is: "+color);
}
}
class square extends shape{
    int side;
    square(String c,int s){
        super(c);
        side=s;
    }
   
    int area(){
          return side*side;
    }
     @Override
    void dis(){
        super.dis();
        System.out.println("the area os the given side is"+area());
    }
}
public class Main {
    public static void main(String[] args) {
     
      square sq=new square("purple",5);
      sq.dis();
    }
}
